{
	"compilerOptions": {
		"rootDir": "src",
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"paths": {
			"engine/*": [
				"./engine/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"src/engine/addon/src/**/*",
		"src/engine/addon/include/**/*"

	]
}
